<div class="container">
  <h2>Choose your ideal family from the list below</h2>
  <% @families.each do |family| %>
    <div class="card">
      <div class="card-image">
        <%= cl_image_tag family.photo, height: 200, width: 250 %>
        <%= link_to "", family_path(family) %>
      </div>
      <div class="card-name">
        <h3><%= family.name %></h3>
          <p><%= link_to "find out more", family_path(family), class: 'card-link' %></p>
      </div>
      <div class="card-description">
        <p> Up to <strong><%= "#{family.capacity} guests" %></strong></p>
        <p>Price per day: <strong><%= "#{family.price_pppn}â‚¬ per guest"%></strong></p>
      </div>
    </div>
  <% end %>
</div>

<% if policy(Family).new? %>
  <%= link_to "Create a family", new_family_path %>
<% end %>

